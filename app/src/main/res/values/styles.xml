<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabSelectedTextColor">@color/browser_actions_text_color</item>
        <item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="backgroundColor">@color/toolbar</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:layout_gravity">center</item>
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/toolbarTitle</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>